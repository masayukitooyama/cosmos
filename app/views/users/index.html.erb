<section class="content-header">
  <h1>内定者一覧</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    <li class="active">内定者一覧</li>
  </ol>
</section>
<div id="user-list">
  <div>
    <section class="content user-list-block-1">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-body">
              <%= render 'search_form' %>
              <% if current_user.admin? %>
                <div class="margin-bottom-10">
                  <div class="row">
                    <div class="col-md-2 margin-left-10 ">
                      <button type="button" id="newUserCreateBtn" class="btn btn-raised btn-info" v-on:click="onUserNewClicked">新規登録</button>
                    </div>
                  </div>
                </div>
              <% end %>

              <% if @users.present? %>
                <table id="user-list-table-1" class="table table-responsive table-striped table-hover">
                  <thead>
                    <tr>
                      <th>
                        名前
                      </th>
                      <th>
                        メールアドレス
                      </th>
                      <th>
                        社員番号
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                      <tr clas="cursor-pointer">
                        <td>
                          <%= user.user_name %>
                        </td>
                        <td>
                          <%= user.email %>
                        </td>
                        <td>
                          <%=  user.job_label %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              <% else %>
                <div class="col-sm-12 search_empty_msg">
                  <p> <%= t('errors.messages.search_empty') %></p>
                </div>
              <% end %>
            </div><!-- box-body -->
          </div><!-- box -->
        </div>
      </div><!-- row -->
    </section>
    <%= render 'modal' %>
  </div>
</div>
