<section class="content-header">
  <h1>ユーザー一覧</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">ユーザー一覧</li>
  </ol>
</section>
<div id="user-list">
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <p class="margin-0 text-right">利用者：<%= @users.count %>名</p>
          </div>
          <div class="box-body">
            <%= render 'search_form' %>
            <% if @users.present? %>
              <div class="table-responsive">
                
              </div>
            <% else %>
            <div class="col-sm-12 search_empty_msg">
              <p> <%= t('errors.messages.search_empty') %></p>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
