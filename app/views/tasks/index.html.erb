<section class="content-header">
  <h1>課題一覧</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">課題一覧</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="topix-list margin-bottom-10">
        <div class="row">
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
              <span class="info-box-icon bg-aqua"><i class="ion ion-ios-gear-outline"></i></span>
              <div class="info-box-content">
                <span class="info-box-text">課題数</span>
                <span class="info-box-number"><big><%= @tasks.length %></big><small>問</small></span>
              </div>
              <!-- /.info-box-content -->
            </div>
          </div>
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
              <span class="info-box-icon bg-red"><i class="fa fa-flag-o"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">現在の課題</span>
                <span class="info-box-number"><%= @tasks[0].task_title %></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
              <span class="info-box-icon bg-green"><i class="fa fa-line-chart"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">全体の進捗率</span>
                <span class="info-box-number">90<small>%</small></span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
              <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">New Members</span>
                <span class="info-box-number">2,000</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
        </div>
      </div>
      <div class="box">
        <div class="box-body">
        <%= render 'search_form' %>
        <% if @tasks.present? %>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>タイトル</th>
                  <th>期限</th>
                  <th>完了者</th>
                  <th>全体進捗</th>
                </tr>
              </thead>

              <tbody>
                <% @tasks.each_with_index do |task, index| %>
                  <tr class="task_list cursor-pointer" data-task-id="<%= task.id %>">
                    <td><%= index + 1 %></td>
                    <td><%= task.task_title %></td>
                    <td>2016/10/30</td>
                    <td>100名</td>
                    <td><span class="badge bg-green">90%</span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
        <div class="col-sm-12 search_empty_msg">
          <p> <%= t('errors.messages.search_empty') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
</section>

  <br>
  <% #if current_user.role_id == 1 %>
    <%= link_to 'New Task', new_task_path %>
  <% #end %>
