<section class="content-header">
  <h1>社員一覧</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    <li class="active">社員一覧</li>
  </ol>
</section>
<div id="user-list">
  <section class="content user-list-block-1">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <%= render 'search_form' %>
            <% if @employees.present? %>
              <table id="user-list-table-1" class="table table-responsive table-striped table-hover">
                <thead>
                  <tr>
                    <th>
                      名前
                    </th>
                    <th>
                      メールアドレス
                    </th>
                    <th>
                      社員番号
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @employees.each do |employee| %>
                    <tr clas="cursor-pointer">
                      <td>
                        <%= employee.user_name %>
                      </td>
                      <td>
                        <%= employee.email %>
                      </td>
                      <td>
                        <%=  employee.employee_number%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
            <div class="col-sm-12 search_empty_msg">
              <p> <%= t('errors.messages.search_empty') %></p>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
