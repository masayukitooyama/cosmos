<div class="search-form margin-bottom-10">
  <form method="GET" action="/employees" class="form-horizontal">
      <div class="row">
        <div class="form-group col-sm-12">
          <div class="form-group col-sm-6">
            <label class="col-sm-5 control-label">社員名</label>
            <div class="col-sm-7">
              <%= text_field_tag :user_name, params[:user_name], :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group col-sm-6">
            <label class="col-sm-5 control-label">職種</label>
            <div class="col-sm-7">
              <%= select_tag :job_type, options_for_select(job_types_options.map{|a| [a.job_type_name, a.id]}, params[:job_type]), {class: 'form-control', include_blank: INCLUDE_BLANK_MESSAGE } %>
            </div>
          </div>
        </div>
        <div class="form-group col-sm-12">
          <div class="form-group col-sm-6">
            <label class="col-sm-5 control-label">所属</label>
            <div class="col-sm-7">
              <%= select_tag :belonging, options_for_select(belongings_options.map{|a| [a.belonging_name, a.id]}, params[:belonging]), {class: 'form-control', include_blank: INCLUDE_BLANK_MESSAGE } %>
            </div>
          </div>
          <label class="col-sm-2 control-label">&nbsp;</label>
          <div class="col-sm-4 search-btn">
            <button  class="btn btn-block btn-success">検索</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
