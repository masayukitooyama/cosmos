<div class="content-header-outer">
  <section class="content-header">
    <h1>書籍検索</h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
      <li class="active">書籍検索</li>
    </ol>
  </section>
</div>
<section class="content books-search-block-1">
  <div class="row">
    <form method="GET" action="/book/search" class="form-horizontal">
      <div class="form-group col-lg-12">
        <label class="col-lg-2 control-label">キーワード</label>
        <div class="col-lg-4 padding-0">
          <%= text_field_tag :keyword, params[:keyword], :class => 'book form-control' %>
        </div>
        <div class="col-lg-2">
          <label class="col-lg-2 control-label">&nbsp;</label>
          <div class="col-lg-8 search-btn">
            <button class="btn btn-block btn-primary">検索</button>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="post">
    <div class="row">
      <div class="col-sm-12">
        <div class="book-search-title">
          <h3>検索結果</h3>
        </div>
        <ol class="book-search-list">
          <li class="book-search-result">
            <img src="https://pbs.twimg.com/profile_images/378800000220029324/fe66faeca20115da8566e51d83447ead_400x400.jpeg" class="image-list">
            <div class="">
              title
            </div>
            <div class="">
              author
            </div>
          </li>
          <li class="book-search-result">
            <img src="https://pbs.twimg.com/profile_images/378800000220029324/fe66faeca20115da8566e51d83447ead_400x400.jpeg" class="image-list">
            <div class="">
              title
            </div>
            <div class="">
              author
            </div>
          </li>
          <li class="book-search-result">
            <img src="https://pbs.twimg.com/profile_images/378800000220029324/fe66faeca20115da8566e51d83447ead_400x400.jpeg" class="image-list">
            <div class="">
              title
            </div>
            <div class="">
              author
            </div>
          </li>
          <li class="book-search-result">
            <img src="https://pbs.twimg.com/profile_images/378800000220029324/fe66faeca20115da8566e51d83447ead_400x400.jpeg" class="image-list">
            <div class="">
              title
            </div>
            <div class="">
              author
            </div>
          </li>
        </ol>
      </div>
    </div>
    <ul class="list-inline">
      <li><a href="" class="link-black text-sm"><i class="fa fa-share margin-r-5"></i> Share</a></li>
      <li><a href="" class="link-black text-sm"><i class="fa fa-thumbs-o-up margin-r-5"></i> Like</a>
      </li>
      <li class="pull-right">
        <a href="" class="link-black text-sm"><i class="fa fa-comments-o margin-r-5"></i> Comments
          (5)</a></li>
    </ul>

    <input class="form-control input-sm" type="text" placeholder="Type a comment">
  </div>
</section>
