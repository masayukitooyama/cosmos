<div class="search-form margin-bottom-10">
  <form method="GET" action="/borrow_histories" class="form-horizontal">
    <div class="row">
      <div class="form-group col-sm-12">
        <div class="form-group col-sm-4">
          <label class="col-sm-5 control-label">ユーザー名</label>
          <div class="col-sm-7">
            <%= text_field_tag :user_name, params[:user_name], :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group col-sm-4">
          <label class="col-sm-5 control-label">メールアドレス</label>
          <div class="col-sm-7">
            <%= text_field_tag :email, params[:email], :class => 'form-control' %>
          </div>
        </div>
        <div class="col-sm-4">
          <label class="col-sm-5 control-label">&nbsp;</label>
          <div class="col-sm-7 search-btn margin-top-10 ">
            <button  class="btn btn-block btn-success">検索</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
